<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".activities.DetayActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_detay_linear_layout_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgKapakDetay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imgKapakDetay_height"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtBaslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey"
                android:layout_marginTop="@dimen/txtBaslik_marginTop"
                android:padding="@dimen/activity_detay_text_padding"
                android:textAlignment="center"
                android:textColor="@color/dark_pink"
                android:textSize="@dimen/txtBaslik_size"
                android:textStyle="bold"
                tools:text="@string/txtBaslik_tools_text" />

            <TextView
                android:id="@+id/txtDetay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey"
                android:padding="@dimen/activity_detay_text_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/txtDetay_size"
                tools:text="@string/txtDetay_tools_text" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>